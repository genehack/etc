rules {
    rule {name = "Acroread" float = true  tags = "watch" }
    rule {name = "Emacs"    float = false tags = "edit"}
    rule {name = "Firefox"  float = false tags = "browse"}
    rule {name = "Gimp"     float = true  tags = "6" }
    rule {name = "MPlayer"  float = true  tags = "watch" }
    rule {name = "pinentry" float = true}
    rule {name = "xfrun4"   float = true}
}

mouse {
    root   { button = "3"                   command = "spawn" arg = "exec xterm" }
    client { button = "1" modkey = {"Mod4"} command = "client_movemouse" }
    client { button = "2" modkey = {"Mod4"} command = "client_zoom" }
    client { button = "3" modkey = {"Mod4"} command = "client_resizemouse" }
}

