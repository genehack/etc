            mouse { button = "3" modkey = {"Mod4"} command = "client_toggletag" }
            mouse { button = "4"                   command = "tag_viewnext" }
            mouse { button = "5"                   command = "tag_viewprev" }
        }

        layoutinfo mylayoutinfo {
