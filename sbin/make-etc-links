#! /bin/bash

ln -sfv ~/etc/sbin/make-etc-links ~/bin

echo

for i in           \
    Xmodmap        \
    aliases        \
    awesomerc      \
    bash_logout    \
    bash_profile   \
    bashrc         \
    conkyrc        \
    screenrc       \
; do
    ln -sfv ~/etc/$i ~/.$i
done

if [ $GENEHACK_LOCATION != "LAPTOP" ]; then
    ln -sfv ~/etc/xinitrc ~/.xinitrc
fi

echo 

ln -sfv ~/etc/subversion/config  ~/.subversion/config
ln -sfv ~/etc/subversion/servers ~/.subversion/servers
ln -sfv ~/etc/vim/vimrc          ~/.vimrc

rm -f ~/.vim
ln -sfv ~/etc/vim                ~/.vim

echo

